<div style="display:flex; align-items:center;justify-content:center;">
    <div class="card" style="width: 24rem; padding: 1rem; margin-top: 2rem; border-radius: 8px;">
        <form>
        <h2>User Profile - <%= @user.user_name %></h2>
            <hr>
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" disabled value="<%= @user.full_name %>">
            </div>
            <div class="form-group">
                <label>Email Address</label>
                <input type="text" class="form-control" disabled value="<%= @user.email %>">
            </div>
            <div class="form-group">
                <%= link_to '/profile/edit', :style => 'text-decoration:none;' do %>
                    <button class="btn btn-primary btn-block">
                        Edit Profile
                    </button>
                <% end %>
            </div>
            <% if @profile_updated %> 
                <div>
                    <small class="text-success">Profile updated successfully!</small>
                </div>
            <% end %>
        </form>
    </div>
</div>