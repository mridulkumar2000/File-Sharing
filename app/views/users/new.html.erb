<div style="display:flex; align-items:center;justify-content:center;">
<div class="card" style="width: 24rem; padding: 1rem; margin-top: 2rem; border-radius: 8px;">
    <%= form_for(@user, url: '/signup', method: 'post') do |f| %>
		<h2>Sign Up</h2>
		<hr>
        <div class="form-group">
            <%= f.label :user_name, 'Username' %>
            <%= f.text_field :user_name, class: "form-control", 
                required: true, maxlength: 15 %>  
        </div>
        <div class="form-group">
            <%= f.label :full_name, 'Full Name' %>
            <%= f.text_field :full_name, class: "form-control", 
                required: true %>
        </div>
        <div class="form-group">
            <%= f.label :email, 'Email Address' %>
            <%= f.email_field :email, class: "form-control", 
                required: true, 
                pattern: "^[\\w!#$%&'*+/=?`{|}~^-]+(?:\\.[\\w!#$%&'*+/=?`{|}~^-]+)*@(?:[a-zA-Z0-9-]+\\.)+[a-zA-Z]{2,6}$" ,
                title: 'Please enter valid email'
            %>
        </div>
		<div class="form-group">
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, 
                class: "form-control", 
                required: true, minlength: 8, maxlength: 15,
                pattern: '(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).*',
                title: 'Password must contain atleast one uppercase, lowercase and number'
            %>
        </div>
		<div class="form-group">
            <%= f.submit "Create Account", class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>
	<div class="text-center">Already have an account? <%= link_to "Login here", 'login', :style => 'text-decoration:none;' %></div>
</div>
</div>