<div style="display:flex; align-items:center;justify-content:center;">
<div class="card" style="width: 20rem; padding: 1rem; margin-top: 6rem;">
    <%= form_for(:session, url: login_path) do |f| %>
		<h2>Login</h2>
		<hr>
        <div class="form-group">
			<%= f.label :user_name, 'Username' %>
            <%= f.text_field :user_name, class: 'form-control', 
                required: true, maxlength: 15, value: @params && @params[:user_name] %>
        </div>
		<div class="form-group">
			<%= f.label :password, 'Password' %>
            <%= f.password_field :password, class: 'form-control', required: true, minlength: 8, maxlength: 15 %>
        </div>
		<div class="form-group">
            <%= f.submit "Login", class: 'btn btn-primary btn-block' %>
        </div>
        <% if @params %> 
            <div class="form-message">
                <small class="text-danger">Username or Password incorrect! Please try again</small>
            </div>
        <% end %>
    <% end %>
	<div class="text-center">Don't have an account? <%= link_to "Sign up", 'signup' %></div>
</div>
</div>